<Window x:Class="Modelbuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Modelbuilder"
        mc:Ignorable="d"
                Title="Modelbouwer beheer" Height="900" Width="1200" Icon=".\Resources\logo.gif">

    <Grid>
        <Ribbon x:Name="mainRibbon" Grid.ColumnSpan="4">
            <!-- Help Pane, located at the right-hand side of the window -->
            <Ribbon.HelpPaneContent>
                <RibbonButton SmallImageSource=".\Resources\appHelp.png" ToolTip="Hulp bij dit programma" />
            </Ribbon.HelpPaneContent>

            <!-- Quick access Pane, located at the top of the window -->
            <Ribbon.QuickAccessToolBar>
                <RibbonQuickAccessToolBar>
                    <RibbonButton x:Name ="Save" SmallImageSource=".\Resources\appSave.png" ToolTip="Opslaan" />
                    <RibbonButton SmallImageSource=".\Resources\appUndo.png" ToolTip="Ongedaan maken" />
                    <RibbonButton SmallImageSource=".\Resources\appRedo.png" ToolTip="Opnieuw uitvoeren" />
                    <RibbonButton SmallImageSource=".\resources\appPrint.png" ToolTip="Afdrukken" />
                    <RibbonButton SmallImageSource=".\resources\appExit.png" ToolTip="Afsluiten" Click="ApplicationExit_Click" />
                </RibbonQuickAccessToolBar>
            </Ribbon.QuickAccessToolBar>

            <!-- Application Menu, located at the left-hand side (down arrow) -->
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu SmallImageSource=".\Resources\app.png">
                    <RibbonApplicationMenuItem x:Name="About" Header="Over..." ImageSource=".\Resources\appInfo.png" />
                    <RibbonApplicationMenuItem x:Name="Settings" Header="Instellingen" ImageSource=".\Resources\appSettings.png" />
                    <RibbonApplicationMenuItem Header="Afsluiten" ImageSource=".\Resources\appExit.png" Click="ApplicationExit_Click" />
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>

            <!-- Ribbon tabs -->
            <RibbonTab x:Name="MainTab" Header="Beheer">
                <RibbonGroup x:Name="Time" Header="Tijdregistratie">
                    <RibbonSplitButton LargeImageSource=".\Resources\timeManagement.png" Label="Tijdregistratie" KeyTip="V">
                        <RibbonMenuItem ImageSource=".\Resources\timeEdit.png" Header="Tijdregistratie" />
                        <RibbonMenuItem ImageSource=".\Resources\timeReport.png" Header="Urenrapportage" />
                        <RibbonSeparator></RibbonSeparator>
                        <RibbonMenuItem ImageSource=".\Resources\timeImport.png" Header="Importeer data" KeyTip="T" />
                        <RibbonMenuItem ImageSource=".\Resources\timeExport.png" Header="Exporteer" KeyTip="S" />
                    </RibbonSplitButton>
                    <RibbonMenuButton x:Name="TimeSheet" Label="Tijdregistratie" SmallImageSource=".\Resources\timeEdit.png" />
                    <RibbonMenuButton x:Name="TimeReport" Label="Urenrapportage" SmallImageSource=".\Resources\timeReport.png" />
                </RibbonGroup>

                <RibbonGroup x:Name="Project" Header="Projectenbeheer">
                    <RibbonSplitButton LargeImageSource=".\Resources\projectManagement.png" Label="Projecten">
                        <RibbonMenuItem ImageSource=".\Resources\projectEdit.png" Header="Projectbeheer" />
                        <RibbonMenuItem ImageSource=".\Resources\projectReport.png" Header="Projectenoverzicht" />
                        <RibbonSeparator></RibbonSeparator>
                        <RibbonMenuItem ImageSource=".\Resources\projectImport.png" Header="Importeer projecten" />
                        <RibbonMenuItem ImageSource=".\Resources\projectExport.png" Header="Exporteer projecten" />
                    </RibbonSplitButton>
                    <RibbonMenuButton Label="Projectbeheer" SmallImageSource=".\Resources\projectEdit.png" />
                    <RibbonMenuButton Label="Projectenoverzicht" SmallImageSource=".\Resources\projectReport.png" />
                </RibbonGroup>

                <RibbonGroup x:Name="Storage" Header="Voorraadbeheer">
                    <RibbonSplitButton LargeImageSource=".\Resources\storageManagement.png" Label="Voorraad beheer">
                        <RibbonMenuItem ImageSource=".\Resources\storageOrder.png" Header="Bestellen" />
                        <RibbonMenuItem ImageSource=".\Resources\storageRecieve.png" Header="Ontvangsten" />
                        <RibbonSeparator></RibbonSeparator>
                        <RibbonMenuItem ImageSource=".\Resources\projectImport.png" Header="Importeer projecten" />
                        <RibbonMenuItem ImageSource=".\Resources\projectExport.png" Header="Exporteer projecten" />
                    </RibbonSplitButton>
                    <RibbonMenuButton Label="Bestellen" SmallImageSource=".\Resources\storageOrder.png" />
                    <RibbonMenuButton Label="Ontvangsten" SmallImageSource=".\Resources\storageRecieve.png" />
                    <RibbonMenuButton LargeImageSource=".\Resources\storageReports.png" Label="Overzichten">
                        <RibbonMenuItem ImageSource=".\Resources\storageReportOverview.png" Header="Voorraadoverzicht" />
                        <RibbonMenuItem ImageSource=".\Resources\storageReportRecieve.png" Header="Bestelling-overzicht" />
                        <RibbonMenuItem ImageSource=".\Resources\storageReportUsage.png" Header="Verbruik per project" />
                    </RibbonMenuButton>
                </RibbonGroup>

                <RibbonGroup x:Name="Config" Header="Stambestanden">
                    <RibbonMenuButton LargeImageSource=".\Resources\metadata.png" Label="Stambestanden">
                        <RibbonMenuItem ImageSource=".\Resources\metadataProductsReport.png" Header="Overzicht Artikellen" />
                        <RibbonMenuItem ImageSource=".\Resources\metadataCategoryReport.png" Header="Overzicht Categoriën" />
                        <RibbonMenuItem ImageSource=".\Resources\metadataCountryReport.png" Header="Overzicht Landen" />
                        <RibbonMenuItem ImageSource=".\Resources\metadataSupplierReport.png" Header="Overzicht Leveranciers" />
                        <RibbonMenuItem ImageSource=".\Resources\metadataStorageLocationReport.png" Header="Overzicht Opslag Locaties" />
                        <RibbonMenuItem ImageSource=".\Resources\metadataCurencyReport.png" Header="Overzicht Valuta" />
                        <RibbonMenuItem ImageSource=".\Resources\metadataWorktypeReport.png" Header="Overzicht Werkzaamheden" />
                    </RibbonMenuButton>
                    <RibbonSplitButton Label="Artikelen" SmallImageSource=".\Resources\metadataProducts.png">
                        <RibbonMenuItem ImageSource=".\Resources\metadataProductsImport.png" Header="Importeer Artikellen" />
                        <RibbonMenuItem ImageSource=".\Resources\metadataProductsExport.png" Header="Exporteer Artikellen" />
                    </RibbonSplitButton>
                    <RibbonSplitButton Label="Categoriën" SmallImageSource=".\Resources\metadataCategory.png" Click="ShowCategoryPage">
                        <RibbonMenuItem ImageSource=".\Resources\metadataCategoryImport.png" Header="Importeer Categorieën" />
                        <RibbonMenuItem ImageSource=".\Resources\metadataCategoryImport.png" Header="Exporteer Categorieën" />
                    </RibbonSplitButton>
                    <RibbonSplitButton Label="Landen" SmallImageSource=".\Resources\metadataCountry.png" Click="ShowCountryPage">
                        <RibbonMenuItem ImageSource=".\Resources\metadataCountryImport.png" Header="Importeer Landen" />
                        <RibbonMenuItem ImageSource=".\Resources\metadataCountryExport.png" Header="Exporteer Landen" />
                    </RibbonSplitButton>
                    <RibbonSplitButton Label="Leveranciers" SmallImageSource=".\Resources\metadataSupplier.png">
                        <RibbonMenuItem ImageSource=".\Resources\metadataSupplierImport.png" Header="Importeer Leveranciers" />
                        <RibbonMenuItem ImageSource=".\Resources\metadataSupplierExport.png" Header="Exporteer Leveranciers" />
                    </RibbonSplitButton>
                    <RibbonSplitButton Label="Locaties" SmallImageSource=".\Resources\metadataStorageLocation.png" Click="ShowStoragePage">
                        <RibbonMenuItem ImageSource=".\Resources\metadataStorageLocationImport.png" Header="Importeer Locaties" />
                        <RibbonMenuItem ImageSource=".\Resources\metadataStorageLocationExport.png" Header="Exporteer Locaties" />
                    </RibbonSplitButton>
                    <RibbonSplitButton Label="Valuta" SmallImageSource=".\Resources\metadataCurency.png" Click="ShowCurrencyPage">
                        <RibbonMenuItem ImageSource=".\Resources\metadataCurencyImport.png" Header="Importeer Valuta" />
                        <RibbonMenuItem ImageSource=".\Resources\metadataCurencyExport.png" Header="Exporteer Valuta" />
                    </RibbonSplitButton>
                    <RibbonSplitButton Label="Werksoorten" SmallImageSource=".\Resources\metadataWorktype.png" Click="ShowWorktypePage">
                        <RibbonMenuItem ImageSource=".\Resources\metadataWorktypeImport.png" Header="Importeer Werksoorten"/>
                        <RibbonMenuItem ImageSource=".\Resources\metadataWorktypeExport.png" Header="Exporteer Werksoorten"/>
                    </RibbonSplitButton>
                </RibbonGroup>
            </RibbonTab>

            <RibbonTab x:Name="ConfigTab" Header="Instellingen">
                <RibbonButton LargeImageSource=".\Resources\options.png" Label="Instellingen" />
            </RibbonTab>
        </Ribbon>

        <Frame x:Name="Main" Margin="0,140,0,0" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>