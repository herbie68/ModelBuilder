<Page x:Class="Modelbuilder.Views.MainStorage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Modelbuilder.Views" xmlns:models="clr-namespace:Modelbuilder.Models" d:DataContext="{d:DesignInstance Type=models:Storage}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainStorage">

    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
        <Label>Name:</Label>
        <TextBox Text="{Binding Storage.Name}" Width="50"/>
    </StackPanel>
</Page>
