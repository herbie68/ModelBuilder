<Page x:Class="Modelbuilder.Views.metadataProject"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Modelbuilder.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:p="clr-namespace:Modelbuilder.Languages"
      Title="metadataProject"
      d:DesignHeight="800" d:DesignWidth="1000"
      mc:Ignorable="d">

    <Border Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}" Style="{DynamicResource MainBorder}">
        <StackPanel Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}">
            <!--  region Title of the page  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Style="{DynamicResource Title}"
                           Text="{x:Static p:Cultures.metadataProject_Page_Title}" />

                <!--#region Hiddenfields-->
                <!--  Don't remove next lines, are necesarry to store selected values for context menu actions  -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBox x:Name="valueProjectId" Style="{DynamicResource HiddenTextBox}" />
                    <TextBox x:Name="valueImageRotationAngle"
                             Style="{DynamicResource HiddenTextBox}"
                             Text="0" />
                </StackPanel>
                <!--  End of "Do not remove" part  -->
                <!--#endregion-->
            </Grid>
            <Path Style="{DynamicResource TitleLine}" />
            <TabControl Height="450" Style="{DynamicResource Default TabControl}">
                <TabItem Header="{x:Static p:Cultures.metadataProject_TabItemHeader_General}" Style="{DynamicResource Default TabItem}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Width="720" HorizontalAlignment="Left">
                            <!--#region Genereal projectinformation-->
                            <GroupBox Opacity="1">
                                <GroupBox.Header>
                                    <StackPanel Background="Transparent" Orientation="Horizontal">
                                        <Image Source="\Resources\projectManagement.png" Style="{DynamicResource ImageHeaderGroup}" />
                                        <TextBlock Style="{DynamicResource TextBlockBold}" Text="Algemene projectgegevens" />
                                    </StackPanel>
                                </GroupBox.Header>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="1.5*" />
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="7*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="Zoeknaam" />
                                    <TextBox x:Name="inpProjectCode"
                                             Grid.Row="1" Grid.Column="0"
                                             Width="200"
                                             CharacterCasing="Upper"
                                             Style="{DynamicResource DefaultTextBox}" />

                                    <TextBlock Grid.Row="2" Grid.Column="0"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="Omschrijving" />
                                    <TextBox x:Name="inpProjectName"
                                             Grid.Row="3" Grid.Column="0"
                                             Grid.ColumnSpan="3"
                                             Width="500"
                                             Style="{DynamicResource DefaultTextBox}" />

                                    <TextBlock Grid.Row="4" Grid.Column="0"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="Startdatum" />
                                    <DatePicker x:Name="inpProjectStartdate"
                                                Grid.Row="5" Grid.Column="0"
                                                Width="150"
                                                Style="{DynamicResource DefaultDataPicker}" />

                                    <TextBlock x:Name="lblProjectEndDate"
                                               Grid.Row="4" Grid.Column="2"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="Einddatum" Visibility="Hidden" />
                                    <DatePicker x:Name="inpProjectEnddate"
                                                Grid.Row="5" Grid.Column="2"
                                                Width="150"
                                                Style="{DynamicResource DefaultDataPicker}"
                                                Visibility="Hidden" />

                                    <TextBlock x:Name="lblExpEndDate"
                                               Grid.Row="4" Grid.Column="2"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="Verwachte einddatum" Visibility="Visible" />
                                    <TextBox x:Name="dispProjectExpEnddate"
                                             Grid.Row="5" Grid.Column="2"
                                             Width="150"
                                             Style="{DynamicResource NonEditableTextBox}"
                                             Visibility="Visible" />

                                    <TextBlock Grid.Row="6" Grid.Column="0"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="Project voltooid" />
                                    <CheckBox x:Name="inpProjectClosed"
                                              Grid.Row="7" Grid.Column="0"
                                              Checked="ProjectIsCompleted"
                                              Style="{DynamicResource DefaultCheckBox}"
                                              Unchecked="ProjectIsCompleted" />
                                </Grid>

                            </GroupBox>
                            <!--#endregion-->

                            <!--#region Time-->
                            <GroupBox Opacity="1">
                                <GroupBox.Header>
                                    <StackPanel Background="Transparent" Orientation="Horizontal">
                                        <Image Source="\Resources\projectTime.png" Style="{DynamicResource ImageHeaderGroup}" />
                                        <TextBlock Style="{DynamicResource TextBlockBold}" Text="Totale bouwtijd" />
                                    </StackPanel>
                                </GroupBox.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width=".15*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width=".075*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width=".15*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Style="{DynamicResource TextBlockBold}"
                                               Text="Voortgang" />

                                    <TextBlock Grid.Row="0" Grid.Column="5"
                                               Style="{DynamicResource TextBlockBold}"
                                               Text="Verwachting" />

                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="Bouwtijd:" />
                                    <TextBox x:Name="dispProjectBuildTime"
                                             Grid.Row="1" Grid.Column="1"
                                             Width="50"
                                             Style="{DynamicResource NonEditableNumericTextBox}" />
                                    <TextBox x:Name="dispProjectBuildTimeLong"
                                             Grid.Row="1" Grid.Column="3"
                                             Width="100"
                                             Style="{DynamicResource NonEditableTextBox}" />

                                    <TextBlock Grid.Row="2" Grid.Column="0"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="Werkdagen:" />
                                    <TextBox x:Name="dispProjectBuildDays"
                                             Grid.Row="2" Grid.Column="1"
                                             Width="50"
                                             Style="{DynamicResource NonEditableNumericTextBox}" />

                                    <TextBlock Grid.Row="3" Grid.Column="0"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="Kortste dag:" />
                                    <TextBox x:Name="dispProjectShortestDay"
                                             Grid.Row="3" Grid.Column="1"
                                             Width="100"
                                             HorizontalAlignment="Right"
                                             Style="{DynamicResource NonEditableTextBox}" />
                                    <TextBox x:Name="dispProjectShortestDayLong"
                                             Grid.Row="3" Grid.Column="3"
                                             Width="100"
                                             Style="{DynamicResource NonEditableTextBox}" />

                                    <TextBlock Grid.Row="4" Grid.Column="0"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="Langste dag:" />
                                    <TextBox x:Name="dispProjectLongestDay"
                                             Grid.Row="4" Grid.Column="1"
                                             Width="100"
                                             HorizontalAlignment="Right"
                                             Style="{DynamicResource NonEditableTextBox}" />
                                    <TextBox x:Name="dispProjectLongestDayLong"
                                             Grid.Row="4" Grid.Column="3"
                                             Width="100"
                                             Style="{DynamicResource NonEditableTextBox}" />

                                    <TextBlock Grid.Row="5" Grid.Column="0"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="Uren per dag:" />
                                    <TextBox x:Name="dispProjectDaylyHours"
                                             Grid.Row="5" Grid.Column="1"
                                             Width="100"
                                             HorizontalAlignment="Right"
                                             Style="{DynamicResource NonEditableTextBox}" />
                                    <TextBox x:Name="dispProjectDaylyHoursLong"
                                             Grid.Row="5" Grid.Column="3"
                                             Width="100"
                                             Style="{DynamicResource NonEditableTextBox}" />

                                    <TextBlock Grid.Row="1" Grid.Column="5"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="Verwachte bouwtijd:" />
                                    <TextBox x:Name="inpProjectExpTime"
                                             Grid.Row="1" Grid.Column="6"
                                             Width="50"
                                             HorizontalAlignment="Right"
                                             Style="{DynamicResource NumericTextBox}" />
                                    <TextBlock Grid.Row="1" Grid.Column="7"
                                               Grid.ColumnSpan="2"
                                               Width="37"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="(uren)" />

                                    <TextBlock Grid.Row="2" Grid.Column="5"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="Werkdagen:" />
                                    <TextBox x:Name="dispProjectExpBuildDays"
                                             Grid.Row="2" Grid.Column="6"
                                             Width="50"
                                             Style="{DynamicResource NonEditableNumericTextBox}" />
                                    <TextBox x:Name="dispProjectExpBuildDaysLong"
                                             Grid.Row="2" Grid.Column="8"
                                             Width="100"
                                             Style="{DynamicResource NonEditableTextBox}" />

                                    <TextBlock Grid.Row="3" Grid.Column="5"
                                               Style="{DynamicResource TextBlockBold}"
                                               Text="Nog te gaan:" />

                                    <TextBlock Grid.Row="4" Grid.Column="5"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="Uren:" />
                                    <TextBox x:Name="dispProjectToDoBuildTime"
                                             Grid.Row="4" Grid.Column="6"
                                             Width="50"
                                             Style="{DynamicResource NonEditableNumericTextBox}" />
                                    <TextBox x:Name="dispProjectToDoBuildTimeLong"
                                             Grid.Row="4" Grid.Column="8"
                                             Width="100"
                                             Style="{DynamicResource NonEditableTextBox}" />

                                    <TextBlock Grid.Row="5" Grid.Column="5"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="Dagen:" />
                                    <TextBox x:Name="dispProjectToDoBuildDays"
                                             Grid.Row="5" Grid.Column="6"
                                             Width="50"
                                             Style="{DynamicResource NonEditableNumericTextBox}" />
                                </Grid>
                            </GroupBox>
                            <!--#endregion Time-->

                            <GroupBox Opacity="1">
                                <GroupBox.Header>
                                    <StackPanel Background="Transparent" Orientation="Horizontal">
                                        <Image Source="\Resources\projectExpenses.png" Style="{DynamicResource ImageHeaderGroup}" />
                                        <TextBlock Style="{DynamicResource TextBlockBold}" Text="Totale kosten" />
                                    </StackPanel>
                                </GroupBox.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width=".15*" />
                                        <ColumnDefinition Width=".65*" />
                                        <ColumnDefinition Width="3*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height=".15*" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               VerticalAlignment="Center"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="Materiaal kosten:" />
                                    <TextBlock Grid.Row="0" Grid.Column="1"
                                               HorizontalAlignment="Right" VerticalAlignment="Center"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="€" />
                                    <TextBox x:Name="dispProjectMaterialCosts"
                                             Grid.Row="0" Grid.Column="2"
                                             Width="100"
                                             VerticalAlignment="Center"
                                             Style="{DynamicResource NonEditableNumericTextBox}" />

                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                               VerticalAlignment="Center"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="Uren:" />
                                    <TextBlock Grid.Row="1" Grid.Column="1"
                                               HorizontalAlignment="Right" VerticalAlignment="Center"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="€" />
                                    <TextBox x:Name="dispProjectHourCosts"
                                             Grid.Row="1" Grid.Column="2"
                                             Width="100"
                                             VerticalAlignment="Center"
                                             Style="{DynamicResource NonEditableNumericTextBox}" />

                                    <TextBlock Grid.Row="2" Grid.Column="0"
                                               VerticalAlignment="Center"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="Totale kosten:" />
                                    <TextBlock Grid.Row="2" Grid.Column="1"
                                               HorizontalAlignment="Right" VerticalAlignment="Center"
                                               Style="{DynamicResource DefaultTextBlock}"
                                               Text="€" />
                                    <TextBox x:Name="dispProjectTotalCosts"
                                             Grid.Row="2" Grid.Column="2"
                                             Width="100"
                                             VerticalAlignment="Center"
                                             Style="{DynamicResource NonEditableNumericTextBox}" />
                                    <Rectangle Grid.Row="2" Grid.Column="2"
                                               Width="{Binding ActualWidth, ElementName=dispProjectTotalCosts}"
                                               Height=".25"
                                               HorizontalAlignment="Right" VerticalAlignment="Top"
                                               Stroke="Black" StrokeThickness="0.25" />
                                    <Rectangle Grid.Row="2" Grid.Column="2"
                                               Width="{Binding ActualWidth, ElementName=dispProjectTotalCosts}"
                                               Height=".25"
                                               HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                               Stroke="Black" StrokeThickness="0.25" />

                                    <TextBox x:Name="Spacer"
                                             Grid.Row="3" Grid.Column="2"
                                             Width="100" Height="1"
                                             HorizontalAlignment="Right" VerticalAlignment="Center"
                                             Style="{DynamicResource NonEditableTextBox}"
                                             Text="" />
                                    <Rectangle Grid.Row="3" Grid.Column="2"
                                               Width="{Binding ActualWidth, ElementName=Spacer}"
                                               Height=".25"
                                               HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                               Stroke="Black" StrokeThickness="0.25" />

                                </Grid>
                            </GroupBox>
                        </StackPanel>

                        <!--#region Product Image block-->
                        <StackPanel Grid.Column="1" Margin="5">
                            <Border Width="230" Height="230"
                                    Margin="2"
                                    Style="{DynamicResource ImageBorder}">
                                <Image x:Name="imgProjectImage"
                                       Source="/Resources/noImage.png"
                                       Style="{DynamicResource ProductImage}" />
                            </Border>
                            <ToolBarTray Style="{DynamicResource ImageToolBarTray}">
                                <ToolBar Style="{DynamicResource ImageToolBar}">
                                    <Button VerticalAlignment="Top"
                                            Click="ImageAdd" ToolTip="Afbeelding toevoegen/wijzigen">
                                        <Image Style="{DynamicResource ToolBarAddIcon}" />
                                    </Button>
                                    <Button VerticalAlignment="Top"
                                            Click="ImageDelete" ToolTip="Afbeelding verwijderen">
                                        <Image Style="{DynamicResource ToolBarDeleteIcon}" />
                                    </Button>
                                    <Separator Style="{DynamicResource ImageToolBarSeperator}" />
                                    <Button VerticalAlignment="Top"
                                            Click="ImageRotate" ToolTip="Afbeelding kwartslag draaien">
                                        <Image Style="{DynamicResource ToolBarRotateIcon}" />
                                    </Button>
                                </ToolBar>
                            </ToolBarTray>
                        </StackPanel>
                        <!--#endregion-->
                    </Grid>

                </TabItem>
                <!--#endregion-->

                <!--#endregion-->

                <!--#endregion-->

                <!--#endregion-->

                <!--#region Tabpage for memo field-->
                <TabItem x:Name="MemoTab"
                         Header="{x:Static p:Cultures.metadataProject_TabItemHeader_Memo}"
                         IsEnabled="False"
                         Style="{DynamicResource Default TabItem}">
                    <Grid>
                        <!--#region Toolbar memo field-->
                        <ToolBarTray Margin="5,5,5,0" Style="{DynamicResource RtfToolBarTray}">
                            <ToolBar Style="{DynamicResource RtfToolBar}">
                                <Button VerticalAlignment="Top"
                                        Command="ApplicationCommands.Cut" ToolTip="Knippen">
                                    <Image Style="{DynamicResource RtfToolBarCutIcon}" />
                                </Button>
                                <Button Command="ApplicationCommands.Copy" ToolTip="Kopieer">
                                    <Image Style="{DynamicResource RtfToolBarCopyIcon}" />
                                </Button>
                                <Button Command="ApplicationCommands.Paste" ToolTip="Plak">
                                    <Image Style="{DynamicResource RtfToolBarPasteIcon}" />
                                </Button>
                                <Button Command="ApplicationCommands.Undo" ToolTip="Ongedaan maken">
                                    <Image Style="{DynamicResource RtfToolBarUndoIcon}" />
                                </Button>
                                <Button Command="ApplicationCommands.Redo" ToolTip="Opnieuw">
                                    <Image Style="{DynamicResource RtfToolBarRedoIcon}" />
                                </Button>
                                <Separator />

                                <Button x:Name="ToolStripButtonBold"
                                        Command="EditingCommands.ToggleBold" ToolTip="Vet">
                                    <Image Style="{DynamicResource RtfToolBarBoldIcon}" />
                                </Button>
                                <Button x:Name="ToolStripButtonItalic"
                                        Command="EditingCommands.ToggleItalic" ToolTip="Cursief">
                                    <Image Style="{DynamicResource RtfToolBarItalicIcon}" />
                                </Button>
                                <Button x:Name="ToolStripButtonUnderline"
                                        Command="EditingCommands.ToggleUnderline" ToolTip="Vet">
                                    <Image Style="{DynamicResource RtfToolBarUnderlineIcon}" />
                                </Button>
                                <Separator />

                                <Button Command="EditingCommands.ToggleBullets" ToolTip="Lijst">
                                    <Image Style="{DynamicResource RtfToolBarBulletListIcon}" />
                                </Button>
                                <Button Command="EditingCommands.ToggleNumbering" ToolTip="Genummerde lijst">
                                    <Image Style="{DynamicResource RtfToolBarNumbersListIcon}" />
                                </Button>
                                <Separator />

                                <Button Command="EditingCommands.IncreaseIndentation" ToolTip="Inspringen">
                                    <Image Style="{DynamicResource RtfToolBarIndentIcon}" />
                                </Button>
                                <Button Command="EditingCommands.DecreaseIndentation" ToolTip="Terugspringen">
                                    <Image Style="{DynamicResource RtfToolBarIndentRemoveIcon}" />
                                </Button>
                            </ToolBar>
                        </ToolBarTray>
                        <!--  #end region Toolbar memo field  -->

                        <!--#region Memo field-->
                        <RichTextBox x:Name="inpProjectMemo"
                                     Width="Auto" Height="365"
                                     Margin="5,35,5,0" HorizontalAlignment="Center"
                                     VerticalAlignment="Top"
                                     HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <FlowDocument x:Name="inpProjectMemoFD">
                                <Paragraph>
                                    <Run Text="" />
                                </Paragraph>
                            </FlowDocument>
                        </RichTextBox>
                        <!--#endregion Memo field-->
                    </Grid>
                </TabItem>
                <!--#endregion Tabpage for memo field-->

                <!--#region Tabpage for time information-->
                <TabItem x:Name="TimeTab"
                         Header="{x:Static p:Cultures.metadataProject_TabItemHeader_TimeManagement}"
                         IsEnabled="False"
                         Style="{DynamicResource Default TabItem}">
                    <Grid>
                        <TextBlock Margin="10,10,0,0"
                                   Foreground="Red"
                                   Style="{DynamicResource DefaultTextBlock}"
                                   Text="Nog niet geïmplementeerd" />
                    </Grid>
                </TabItem>
                <!--#region Tabpage for project costs information-->
                <TabItem x:Name="CostsTab"
                         Header="{x:Static p:Cultures.metadataProject_TabItemHeader_ProjectCosts}"
                         IsEnabled="False"
                         Style="{DynamicResource Default TabItem}">
                    <Grid>
                        <TextBlock Margin="10,10,0,0"
                                   Foreground="Red"
                                   Style="{DynamicResource DefaultTextBlock}"
                                   Text="Nog niet geïmplementeerd" />
                    </Grid>
                </TabItem>
            </TabControl>
            <!--#endregion-->

            <!--#region Definition of the tabpages-->

            <!--#region Toolbar for datagrid-->
            <ToolBarTray Margin="5" Style="{DynamicResource DefaultToolBarTray}">
                <ToolBar x:Name="generalToolbar" Style="{DynamicResource DefaultToolBar}">
                    <Button Click="ToolbarButtonNew" ToolTip="Project toevoegen">
                        <Image Style="{DynamicResource ToolBarAddIcon}" />
                    </Button>
                    <Button Click="ToolbarButtonSave" ToolTip="Wijzigingen opslaan">
                        <Image Style="{DynamicResource ToolBarSaveIcon}" />
                    </Button>
                    <Button Click="ToolbarButtonDelete" ToolTip="Project verwijderen uit de tabel">
                        <Image Style="{DynamicResource ToolBarDeleteIcon}" />
                    </Button>
                </ToolBar>
            </ToolBarTray>
            <!--#endregion Toolbar for datagrid-->
            <!--#region Datagrid definition-->
            <DataGrid x:Name="ProjectCode_DataGrid"
                      Height="215"
                      Margin="5,0" Padding="3"
                      IsReadOnly="True"
                      ItemsSource="{Binding}"
                      SelectionChanged="ProjectCode_DataGrid_SelectionChanged"
                      Style="{DynamicResource DefaultDataGrid}">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="70"
                                        Binding="{Binding Id}"
                                        Header="ID" Visibility="Hidden" />
                    <DataGridTextColumn Width="80"
                                        Binding="{Binding Code}"
                                        Header="Zoeknaam" />
                    <DataGridTextColumn Width="*"
                                        Binding="{Binding Name}"
                                        Header="Omschrijving" />
                    <DataGridTextColumn Width="80"
                                        Binding="{Binding StartDate, TargetNullValue=None, StringFormat={}\{0:dd/MM/yyyy\}}"
                                        Header="Startdatum" />
                    <DataGridTextColumn Width="80"
                                        Binding="{Binding EndDate, StringFormat={}\{0:dd/MM/yyyy\}}"
                                        Header="Einddatum" />
                    <DataGridCheckBoxColumn Binding="{Binding Closed}" Header="Voltooid" />
                </DataGrid.Columns>
            </DataGrid>
            <!--#endregion-->

            <!--#region Status row-->
            <DockPanel Margin="5" VerticalAlignment="Center"
                       Background="LightGray">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="45" />
                        <ColumnDefinition Width="35" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Aantal:" />
                    <TextBox x:Name="RecordsCount"
                             Grid.Column="1"
                             IsReadOnly="True" />
                    <TextBox x:Name="textBoxStatus"
                             Grid.Column="3"
                             Background="LightGray" IsReadOnly="True" />
                </Grid>
            </DockPanel>
            <!--#endregion-->

        </StackPanel>
    </Border>
</Page>
