<Page x:Class="Modelbuilder.Views.metadataProject"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:p="clr-namespace:Modelbuilder.Languages"
      xmlns:local="clr-namespace:Modelbuilder.Views"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="metadataProject">

    <Border Style="{DynamicResource MainBorder}" Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}">
        <StackPanel Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}">
            <!--region Title of the page  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Style="{DynamicResource Title}" Text="{x:Static p:Cultures.metadataProject_Page_Title}"/>

                <!--#region Hiddenfields-->
                <!-- Don't remove next lines, are necesarry to store selected values for context menu actions -->
                <StackPanel Orientation="Horizontal" Grid.Column="1">
                    <TextBox Style="{DynamicResource HiddenTextBox}" x:Name="valueProjectId" />
                </StackPanel>
                <!-- End of "Do not remove" part-->
                <!--#endregion-->
            </Grid>
            <Path Style="{DynamicResource TitleLine}"/>
            <!--#endregion-->

            <!--#region Definition of the tabpages-->
            <TabControl Height="450" Style="{DynamicResource Default TabControl}">
                <!--#region Tabpage for general information -->
                <TabItem Header="{x:Static p:Cultures.metadataProject_TabItemHeader_General}" Style="{DynamicResource Default TabItem}">
                    <StackPanel HorizontalAlignment="Left" Width="800">
                        <GroupBox Opacity="1">
                            <GroupBox.Header>
                                <StackPanel Orientation="Horizontal" Background="Transparent" >
                                    <Image Style="{DynamicResource ImageHeaderGroup}" Source="\Resources\projectManagement.png"/>
                                    <TextBlock Style="{DynamicResource TextBlockBold}" Text="Algemene projectgegevens"/>
                                </StackPanel>
                            </GroupBox.Header>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="7*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                               Grid.Row="0" Grid.Column="0" Text="Zoeknaam"/>
                                <TextBox Style="{DynamicResource DefaultTextBox}" x:Name="inpProjectCode" 
                                             Grid.Row="1" Grid.Column="0" Width="200" CharacterCasing="Upper"/>

                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                               Grid.Row="2" Grid.Column="0" Text="Omschrijving"/>
                                <TextBox Style="{DynamicResource DefaultTextBox}" x:Name="inpProjectName" 
                                             Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Width="500"/>

                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                               Grid.Row="4" Grid.Column="0" Text="Startdatum"/>
                                <DatePicker Style="{DynamicResource DefaultDataPicker}" x:Name="inpProjectStartdate" 
                                             Grid.Row="5" Grid.Column="0" Width="150"/>

                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                               Grid.Row="4" Grid.Column="1" Visibility="Hidden" Text="Einddatum"/>
                                <DatePicker Style="{DynamicResource DefaultDataPicker}" x:Name="inpProjectEnddate" 
                                             Grid.Row="5" Grid.Column="1" Width="150" Visibility="Hidden"/>

                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                               Grid.Row="4" Grid.Column="2" Visibility="Visible" Text="Verwachte einddatum"/>
                                <TextBox Style="{DynamicResource NonEditableTextBox}" x:Name="dispProjectExpEnddate" 
                                                Grid.Row="5" Grid.Column="2" Width="150" Visibility="Visible"/>

                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                               Grid.Row="6" Grid.Column="0" Text="Project voltooid"/>
                                <CheckBox Style="{DynamicResource DefaultCheckBox}"
                                          Grid.Row="7" Grid.Column="0" x:Name="inpProjectClosed"/>
                            </Grid>
                            
                        </GroupBox>
                        <GroupBox Opacity="1">
                            <GroupBox.Header>
                                <StackPanel Orientation="Horizontal" Background="Transparent" >
                                    <Image Style="{DynamicResource ImageHeaderGroup}" Source="\Resources\projectTime.png"/>
                                    <TextBlock Style="{DynamicResource TextBlockBold}" Text="Totale bouwtijd"/>
                                </StackPanel>
                            </GroupBox.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width=".15*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width=".075*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Style="{DynamicResource TextBlockBold}"
                                           Grid.Row="0" Grid.Column="0" Text="Voortgang"/>

                                <TextBlock Style="{DynamicResource TextBlockBold}"
                                           Grid.Row="0" Grid.Column="5" Text="Verwachting"/>

                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                           Grid.Row="1" Grid.Column="0" Text="Bouwtijd:"/>
                                <TextBox Style="{DynamicResource NonEditableNumericTextBox}" x:Name="dispProjectBuildTime" 
                                         Grid.Row="1" Grid.Column="1" Width="50"/>
                                <TextBox Style="{DynamicResource NonEditableTextBox}" x:Name="dispProjectBuildTimeLong" 
                                         Grid.Row="1" Grid.Column="3" Width="100"/>

                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                           Grid.Row="2" Grid.Column="0" Text="Werkdagen:"/>
                                <TextBox Style="{DynamicResource NonEditableNumericTextBox}" x:Name="dispProjectBuildDays" 
                                         Grid.Row="2" Grid.Column="1" Width="50"/>

                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                           Grid.Row="3" Grid.Column="0" Text="Kortste dag:"/>
                                <TextBox Style="{DynamicResource NonEditableTextBox}" x:Name="dispProjectShortestDay" 
                                         Grid.Row="3" Grid.Column="1" Width="100" HorizontalAlignment="Right"/>
                                <TextBox Style="{DynamicResource NonEditableTextBox}" x:Name="dispProjectShortestDayLong" 
                                         Grid.Row="3" Grid.Column="3" Width="100"/>

                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                           Grid.Row="4" Grid.Column="0" Text="Langste dag:"/>
                                <TextBox Style="{DynamicResource NonEditableTextBox}" x:Name="dispProjectLongestDay" 
                                         Grid.Row="4" Grid.Column="1" Width="100" HorizontalAlignment="Right"/>
                                <TextBox Style="{DynamicResource NonEditableTextBox}" x:Name="dispProjectLongestDayLong" 
                                         Grid.Row="4" Grid.Column="3" Width="100"/>

                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                           Grid.Row="5" Grid.Column="0" Text="Uren per dag:"/>
                                <TextBox Style="{DynamicResource NonEditableTextBox}" x:Name="dispProjectDaylyHours" 
                                         Grid.Row="5" Grid.Column="1" Width="100" HorizontalAlignment="Right"/>
                                <TextBox Style="{DynamicResource NonEditableTextBox}" x:Name="dispProjectDaylyHoursLong" 
                                         Grid.Row="5" Grid.Column="3" Width="100"/>

                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                               Grid.Row="1" Grid.Column="5" Text="Verwachte bouwtijd:"/>
                                <TextBox Style="{DynamicResource DefaultNumericTextBox}" x:Name="inpProjectExpTime" 
                                             Grid.Row="1" Grid.Column="6" Width="50"/>
                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                               Grid.Row="1" Grid.Column="7"  Text="(uren)" Width="37"/>

                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                           Grid.Row="2" Grid.Column="5" Text="Werkdagen:"/>
                                <TextBox Style="{DynamicResource NonEditableNumericTextBox}" x:Name="dispProjectExpBuildDays" 
                                         Grid.Row="2" Grid.Column="6" Width="50"/>
                                <TextBox Style="{DynamicResource NonEditableTextBox}" x:Name="dispProjectExpBuildDaysLong" 
                                         Grid.Row="2" Grid.Column="7" Width="100"/>

                                <TextBlock Style="{DynamicResource TextBlockBold}"
                                           Grid.Row="3" Grid.Column="5" Text="Nog te gaan:"/>

                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                           Grid.Row="4" Grid.Column="5" Text="Uren:"/>
                                <TextBox Style="{DynamicResource NonEditableNumericTextBox}" x:Name="dispProjectToDoBuildTime" 
                                         Grid.Row="4" Grid.Column="6" Width="50"/>
                                <TextBox Style="{DynamicResource NonEditableTextBox}" x:Name="dispProjectToDoBuildTimeLong" 
                                         Grid.Row="4" Grid.Column="7" Width="100"/>

                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                           Grid.Row="5" Grid.Column="5" Text="Dagen:"/>
                                <TextBox Style="{DynamicResource NonEditableNumericTextBox}" x:Name="dispProjectToDoBuildDays" 
                                         Grid.Row="5" Grid.Column="6" Width="50"/>
                            </Grid>
                        </GroupBox>
                        
                        <GroupBox Opacity="1">
                            <GroupBox.Header>
                                <StackPanel Orientation="Horizontal" Background="Transparent" >
                                    <Image Style="{DynamicResource ImageHeaderGroup}" Source="\Resources\projectExpenses.png"/>
                                    <TextBlock Style="{DynamicResource TextBlockBold}" Text="Totale kosten"/>
                                </StackPanel>
                            </GroupBox.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width=".15*"/>
                                    <ColumnDefinition Width=".65*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height=".15*"/>
                                </Grid.RowDefinitions>
                            
                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                           Grid.Row="0" Grid.Column="0" Text="Materiaal kosten:"/>
                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                           Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Text="€"/>
                                <TextBox Style="{DynamicResource NonEditableNumericTextBox}" x:Name="dispProjectMaterialCosts" 
                                         Grid.Row="0" Grid.Column="2" Width="100"/>

                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                           Grid.Row="1" Grid.Column="0" Text="Uren:"/>
                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                           Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Text="€"/>
                                <TextBox Style="{DynamicResource NonEditableNumericTextBox}" x:Name="dispProjectHourCosts" 
                                         Grid.Row="1" Grid.Column="2" Width="100"/>

                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                           Grid.Row="2" Grid.Column="0" Text="Totale kosten:"/>
                                <TextBlock Style="{DynamicResource DefaultTextBlock}"
                                           Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Text="€"/>
                                <TextBox Style="{DynamicResource NonEditableNumericTextBox}" x:Name="dispProjectTotalCosts" 
                                         Grid.Row="2" Grid.Column="2" Width="100"/>
                                <Rectangle Width="{Binding ElementName=dispProjectTotalCosts, Path=ActualWidth}" 
                                           Height=".1" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top"
                                           Stroke="Black" StrokeThickness="0.15"  />
                                <Rectangle Width="{Binding ElementName=dispProjectTotalCosts, Path=ActualWidth}" 
                                           Height=".1" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                           Stroke="Black" StrokeThickness="0.15"  />

                                <TextBox Style="{DynamicResource NonEditableTextBox}"
                                           Grid.Row="3" Grid.Column="2" Height="1" Width="100" Text="" x:Name="Spacer" HorizontalAlignment="Right"/>
                                <Rectangle Width="{Binding ElementName=Spacer, Path=ActualWidth}" 
                                           Height=".1" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                           Stroke="Black" StrokeThickness="0.15"  />

                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </TabItem>
                <!--#endregion-->

                <!--#region Tabpage for memo field-->
                <TabItem Header="{x:Static p:Cultures.metadataProject_TabItemHeader_Memo}" Style="{DynamicResource Default TabItem}">
                    <Grid>
                        <!--#region Toolbar memo field-->
                        <ToolBarTray Style="{DynamicResource RtfToolBarTray}" Margin="5,5,5,0">
                            <ToolBar Style="{DynamicResource RtfToolBar}">
                                <Button Command="ApplicationCommands.Cut" ToolTip="Knippen" VerticalAlignment="Top">
                                    <Image Style="{DynamicResource RtfToolBarCutIcon}" />
                                </Button>
                                <Button Command="ApplicationCommands.Copy" ToolTip="Kopieer">
                                    <Image Style="{DynamicResource RtfToolBarCopyIcon}" />
                                </Button>
                                <Button Command="ApplicationCommands.Paste" ToolTip="Plak">
                                    <Image Style="{DynamicResource RtfToolBarPasteIcon}" />
                                </Button>
                                <Button Command="ApplicationCommands.Undo" ToolTip="Ongedaan maken">
                                    <Image Style="{DynamicResource RtfToolBarUndoIcon}" />
                                </Button>
                                <Button Command="ApplicationCommands.Redo" ToolTip="Opnieuw">
                                    <Image Style="{DynamicResource RtfToolBarRedoIcon}" />
                                </Button>
                                <Separator/>

                                <Button x:Name="ToolStripButtonBold" Command="EditingCommands.ToggleBold" ToolTip="Vet">
                                    <Image Style="{DynamicResource RtfToolBarBoldIcon}" />
                                </Button>
                                <Button x:Name="ToolStripButtonItalic" Command="EditingCommands.ToggleItalic" ToolTip="Cursief">
                                    <Image Style="{DynamicResource RtfToolBarItalicIcon}" />
                                </Button>
                                <Button x:Name="ToolStripButtonUnderline" Command="EditingCommands.ToggleUnderline" ToolTip="Vet">
                                    <Image Style="{DynamicResource RtfToolBarUnderlineIcon}" />
                                </Button>
                                <Separator/>

                                <Button Command="EditingCommands.ToggleBullets" ToolTip="Lijst">
                                    <Image Style="{DynamicResource RtfToolBarBulletListIcon}" />
                                </Button>
                                <Button Command="EditingCommands.ToggleNumbering" ToolTip="Genummerde lijst">
                                    <Image Style="{DynamicResource RtfToolBarNumbersListIcon}" />
                                </Button>
                                <Separator/>

                                <Button Command="EditingCommands.IncreaseIndentation" ToolTip="Inspringen">
                                    <Image Style="{DynamicResource RtfToolBarIndentIcon}" />
                                </Button>
                                <Button Command="EditingCommands.DecreaseIndentation" ToolTip="Terugspringen">
                                    <Image Style="{DynamicResource RtfToolBarIndentRemoveIcon}" />
                                </Button>
                            </ToolBar>
                        </ToolBarTray>
                        <!--#endregion-->

                        <!--#region Memo field-->
                        <RichTextBox x:Name="inpProjectMemo" HorizontalAlignment="Center" VerticalScrollBarVisibility="Auto" 
                                     HorizontalScrollBarVisibility="Auto" VerticalAlignment="Top" 
                                     Margin="5,35,5,0" Height="365" Width="Auto">
                            <FlowDocument x:Name="inpProjectMemoFD">
                                <Paragraph>
                                    <Run Text=""/>
                                </Paragraph>
                            </FlowDocument>
                        </RichTextBox>
                        <!--#endregion-->
                    </Grid>
                </TabItem>
                <!--#endregion-->

                <!--#region Tabpage for time information -->
                <TabItem Header="{x:Static p:Cultures.metadataProject_TabItemHeader_TimeManagement}" Style="{DynamicResource Default TabItem}">
                    <Grid>
                        <TextBlock Style="{DynamicResource DefaultTextBlock}" Text="Nog niet geïmplementeerd" Margin="10,10,0,0" Foreground="Red"/>
                    </Grid>
                </TabItem>
                <!--#endregion-->

                <!--#region Tabpage for project costs information -->
                <TabItem Header="{x:Static p:Cultures.metadataProject_TabItemHeader_ProjectCosts}" Style="{DynamicResource Default TabItem}">
                    <Grid>
                        <TextBlock Style="{DynamicResource DefaultTextBlock}" Text="Nog niet geïmplementeerd" Margin="10,10,0,0" Foreground="Red"/>
                    </Grid>
                </TabItem>
                <!--#endregion-->
            </TabControl>

            <!--#region Toolbar for datagrid-->
            <ToolBarTray Style="{DynamicResource DefaultToolBarTray}" Margin="5">
                <ToolBar Style="{DynamicResource DefaultToolBar}" x:Name="generalToolbar">
                    <Button ToolTip="Product toevoegen" Click="ToolbarButtonNew">
                        <Image Style="{DynamicResource ToolBarAddIcon}" />
                    </Button>
                    <Button ToolTip="Wijzigingen opslaan" Click="ToolbarButtonSave">
                        <Image Style="{DynamicResource ToolBarSaveIcon}" />
                    </Button>
                    <Button ToolTip="Artikel verwijderen uit de tabel" Click="ToolbarButtonDelete">
                        <Image Style="{DynamicResource ToolBarDeleteIcon}" />
                    </Button>
                </ToolBar>
            </ToolBarTray>
            <!--#endregion-->

        </StackPanel>
    </Border>
</Page>
