<Page x:Class="Modelbuilder.metadataSupplier"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Modelbuilder"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="metadataSupplier">

    <Grid Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="30"/>
            <RowDefinition Height="290" />
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <!--  Title of the page  -->
        <TextBlock Style="{DynamicResource Title}" Text="Leveranciers"/>
        <Path Grid.Row="1" Style="{DynamicResource TitleLine}"/>
        
        <!-- Don't remove next lines, are necesarry to store selected values for context menu actions -->
        <TextBox Style="{DynamicResource HiddenTextBox}" x:Name="valueSupplierId"   Margin="450,15,0,0" />
        <TextBox Style="{DynamicResource HiddenTextBox}" x:Name="valueCountryId"    Margin="500,15,0,0" />
        <TextBox Style="{DynamicResource HiddenTextBox}" x:Name="valueCountryCode"  Margin="550,15,0,0" />
        <TextBox Style="{DynamicResource HiddenTextBox}" x:Name="valueCurrencyId"   Margin="600,15,0,0" />
        <TextBox Style="{DynamicResource HiddenTextBox}" x:Name="valueCurrencyCode" Margin="650,15,0,0" />
        <!-- End of "Do not remove" part-->

        <StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2">
            <TabControl Height="285" Background="#FFE5E5E5">
                <TabItem Header="Basisgegevens">
                    <Grid>
                        <Label Style="{DynamicResource DefaultLabel}" Content="Zoeknaam" Margin="0,0"/>
                        <TextBox Style="{DynamicResource DefaultTextBox}" x:Name="inpSupplierCode" Margin="135,6" Width="100" />

                        <Label Style="{DynamicResource DefaultLabel}" Content="Naam" Margin="0,20" />
                    </Grid>
                </TabItem>
                <TabItem Header="Memo">
                    
                </TabItem>
            </TabControl>
        </StackPanel>
        

        <StackPanel Margin="20,20,20,20" DockPanel.Dock="Top">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Label}">
                    <Setter Property="Margin" Value="0,0,0,5"/>
                </Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Margin" Value="0,0,0,5"/>
                </Style>
                <Style TargetType="{x:Type TreeView}">
                    <Setter Property="Margin" Value=" 0,0,0,10"/>
                </Style>
            </StackPanel.Resources>
        </StackPanel>
 
        <StackPanel>
            <TabControl Grid.Row="2" Grid.ColumnSpan="4" Height="285">
                <TabItem Header="Basis gegevens">
                    <Grid Background="#FFE5E5E5">
                        <Label Style="{DynamicResource DefaultLabel}" Content="Zoeknaam" Margin="20,15,0,0" />

                        <Label Style="{DynamicResource DefaultLabel}" Content="Naam" Margin="20,35,0,0" />
                        <TextBox Style="{DynamicResource DefaultTextBox}" x:Name="inpSupplierName" Margin="135,40,0,0" Width="490" />

                        <Label Style="{DynamicResource DefaultLabel}" Content="Adres" Margin="20,55,0,0" />
                        <TextBox Style="{DynamicResource DefaultTextBox}" x:Name="inpSupplierAddress1" Margin="135,60,0,0" Width="490" />
                        <TextBox Style="{DynamicResource DefaultTextBox}" x:Name="inpSupplierAddress2" Margin="135,80,0,0" Width="490" />

                        <Label Style="{DynamicResource DefaultLabel}" Content="Postcode" Margin="20,95,0,0" />
                        <TextBox Style="{DynamicResource DefaultTextBox}" x:Name="inpSupplierZip" Margin="135,100,0,0" Width="110" />

                        <Label Style="{DynamicResource DefaultLabel}" Content="Plaats" Margin="250,95,0,0" />
                        <TextBox Style="{DynamicResource DefaultTextBox}" x:Name="inpSupplierCity" Margin="295,100,0,0" Width="330" />

                        <Label Style="{DynamicResource DefaultLabel}" Content="Land" Margin="20,115,0,0" />
                        <ComboBox Style="{DynamicResource DefaultComboBox}" x:Name="cboxSupplierCountry" Margin="135,120,0,0" Width="190" />

                        <Label Style="{DynamicResource DefaultLabel}" Content="Standaard valuta" Margin="20,135,0,0" />
                        <ComboBox Style="{DynamicResource DefaultComboBox}" x:Name="cboxSupplierCurrency" Margin="135,140,0,0" Width="50" />

                        <Label Style="{DynamicResource DefaultLabel}" Content="Website" Margin="20,155,0,0" />
                        <TextBox Style="{DynamicResource DefaultTextBox}" x:Name="inpSupplierUrl" Margin="135,160,0,0" Width="490" />

                        <Label Style="{DynamicResource DefaultLabel}" Content="Algemeen" Margin="135,175,0,0" />
                        <Label Style="{DynamicResource DefaultLabel}" Content="Verkoop" Margin="300,175,0,0" />
                        <Label Style="{DynamicResource DefaultLabel}" Content="Support" Margin="465,175,0,0" />
                        <Label Style="{DynamicResource DefaultLabel}" Content="Telefoonnummer" Margin="20,195,0,0" />
                        <TextBox Style="{DynamicResource DefaultTextBox}" x:Name="inpSupplierPhoneGeneral" Margin="135,200,0,0" Width="160" />
                        <TextBox Style="{DynamicResource DefaultTextBox}" x:Name="inpSupplierPhoneSales" Margin="300,200,0,0" Width="160" />
                        <TextBox Style="{DynamicResource DefaultTextBox}" x:Name="inpSupplierPhoneSupport" Margin="465,200,0,0" Width="160" />

                        <Label Style="{DynamicResource DefaultLabel}" Content="E-Mail" Margin="20,215,0,0" />
                        <TextBox Style="{DynamicResource DefaultTextBox}" x:Name="inpSupplierMailGeneral" Margin="135,220,0,0" Width="160" />
                        <TextBox Style="{DynamicResource DefaultTextBox}" x:Name="inpSupplierMailSales" Margin="300,220,0,0" Width="160" />
                        <TextBox Style="{DynamicResource DefaultTextBox}" x:Name="inpSupplierMailSupport" Margin="465,220,0,0" Width="160" />

                    </Grid>
                </TabItem>
                <TabItem Header="Contactpersonen">
                    
                </TabItem>
                
                <TabItem Header="Memo">
                    <Grid Background="#FFE5E5E5">
                        <TextBlock Text="Comments" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10" FontWeight="Bold" Foreground="DarkRed"/>
                        <ToolBarTray Style="{DynamicResource RtfToolBarTray}" Margin="10,30,0,0" Width="490">
                            <ToolBar Style="{DynamicResource RtfToolBar}" x:Name="ToolBarTop">
                                <Button Command="ApplicationCommands.Cut" ToolTip="Knippen" VerticalAlignment="Top">
                                    <Image Style="{DynamicResource RtfToolBarCutIcon}" />
                                </Button>
                                <Button Command="ApplicationCommands.Copy" ToolTip="Kopieer">
                                    <Image Style="{DynamicResource RtfToolBarCopyIcon}" />
                                </Button>
                                <Button Command="ApplicationCommands.Paste" ToolTip="Plak">
                                    <Image Style="{DynamicResource RtfToolBarPasteIcon}" />
                                </Button>
                                <Button Command="ApplicationCommands.Undo" ToolTip="Ongedaan maken">
                                    <Image Style="{DynamicResource RtfToolBarUndoIcon}" />
                                </Button>
                                <Button Command="ApplicationCommands.Redo" ToolTip="Opnieuw">
                                    <Image Style="{DynamicResource RtfToolBarRedoIcon}" />
                                </Button>
                                <Separator/>

                                <Button x:Name="ToolStripButtonBold" Command="EditingCommands.ToggleBold" ToolTip="Vet">
                                    <Image Style="{DynamicResource RtfToolBarBoldIcon}" />
                                </Button>
                                <Button x:Name="ToolStripButtonItalic" Command="EditingCommands.ToggleItalic" ToolTip="Cursief">
                                    <Image Style="{DynamicResource RtfToolBarItalicIcon}" />
                                </Button>
                                <Button x:Name="ToolStripButtonUnderline" Command="EditingCommands.ToggleUnderline" ToolTip="Vet">
                                    <Image Style="{DynamicResource RtfToolBarUnderlineIcon}" />
                                </Button>
                                <Separator/>

                                <Button Command="EditingCommands.ToggleBullets" ToolTip="Lijst">
                                    <Image Style="{DynamicResource RtfToolBarBulletListIcon}" />
                                </Button>
                                <Button Command="EditingCommands.ToggleNumbering" ToolTip="Genummerde lijst">
                                    <Image Style="{DynamicResource RtfToolBarNumbersListIcon}" />
                                </Button>
                                <Separator/>

                                <Button Command="EditingCommands.IncreaseIndentation" ToolTip="Inspringen">
                                    <Image Style="{DynamicResource RtfToolBarIndentIcon}" />
                                </Button>
                                <Button Command="EditingCommands.DecreaseIndentation" ToolTip="Terugspringen">
                                    <Image Style="{DynamicResource RtfToolBarIndentRemoveIcon}" />
                                </Button>

                            </ToolBar>
                        </ToolBarTray>
                        <RichTextBox x:Name="inpSupplierMemo" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,70,10,0" Height="182" Width="Auto">
                            <FlowDocument>
                                <Paragraph>
                                    <Run Text=""/>
                                </Paragraph>
                            </FlowDocument>
                        </RichTextBox>
                    </Grid>
                </TabItem>
                
                <TabItem Header="Bestellingen">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>
        </StackPanel>
        
        <StackPanel>
            <ToolBarTray Style="{DynamicResource DefaultToolBarTray}" Margin="20,380,10,0">
                <ToolBar Style="{DynamicResource DefaultToolBar}" x:Name="generalToolbar" Margin="10,5,10,5">
                    <Button ToolTip="Land toevoegen aan de tabel" Click="ToolbarButtonNew">
                        <Image Style="{DynamicResource ToolBarAddIcon}" />
                    </Button>
                    <Button ToolTip="Land verwijderen uit de tabel" Click="ToolbarButtonDelete">
                        <Image Style="{DynamicResource ToolBarDeleteIcon}" />
                    </Button>
                    <Button ToolTip="Wijzigingen opslaan" Click="ToolbarButtonSave">
                        <Image Style="{DynamicResource ToolBarSaveIcon}" />
                    </Button>
                </ToolBar>
            </ToolBarTray>

            <DataGrid x:Name="SupplierCode_DataGrid" Style="{DynamicResource DefaultDataGrid}" ItemsSource="{Binding}"
                  Margin="20,05,20,0" SelectionChanged="SupplierCode_DataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Visibility="Hidden" Width="70" Binding="{Binding supplier_Id}" />
                    <DataGridTextColumn Header="Zoeknaam" Width="80" Binding="{Binding supplier_Code}" />
                    <DataGridTextColumn Header="Naam" Width="180" Binding="{Binding supplier_Name}" />
                    <DataGridTextColumn Header="Adres" Width="180" Binding="{Binding supplier_Address1}" />
                    <DataGridTextColumn Header="Postcode" Width="80" Binding="{Binding supplier_Zip}" />
                    <DataGridTextColumn Header="Plaats" Width="120" Binding="{Binding supplier_City}" />
                    <DataGridTextColumn Header="Valuta ID" Visibility="Hidden" Width="70" Binding="{Binding currency_Id}" />
                    <DataGridTextColumn Header="Valuta" Width="70" Binding="{Binding currency_Symbol}" />
                    <DataGridTextColumn Header="Valuta ID" Visibility="Hidden" Width="70" Binding="{Binding country_Id}" />
                    <DataGridTextColumn Header="Land" Width="*" Binding="{Binding country_Name}" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>


    </Grid>
</Page>
