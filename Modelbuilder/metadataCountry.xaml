<Page x:Class="Modelbuilder.metadataCountry"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="metadataCountry">

    <Grid>
        <!-- Title of the page-->
        <StackPanel Margin="10,0,10,0">
            <Label Content="Landen" FontSize="20" FontWeight="Bold" Margin="10"></Label>
            <Canvas>
                <Path Height="5" Stroke="Red" Width="250" Canvas.Top="-5" Canvas.Left="5"
                      Stretch="Fill"  StrokeThickness="5" Fill="Blue" Data="M61,125 L193,28"/>
            </Canvas>
        </StackPanel>

        <!-- Vertical distance between Labels: 26 -->
        <Label Content="Landcode"
                Margin="20,68,0,0"
                HorizontalAlignment="Left"      
                VerticalAlignment="Top"     
                Width="130"/>
        <TextBox x:Name="inpCountryCode" 
                    HorizontalAlignment="Left" 
                    Margin="170,71,0,0" 
                    TextWrapping="Wrap" 
                    Text="" 
                    VerticalAlignment="Top" 
                    Width="50" 
                    Background="#FFB4B4B4"/>

        <Label Content="Land"
                   Margin="20,94,0,0"
                   HorizontalAlignment="Left"      
                   VerticalAlignment="Top"     
                   Width="130"/>
        <TextBox x:Name="inpCountryName" 
                     HorizontalAlignment="Left" 
                     Margin="170,97,0,0" 
                     TextWrapping="Wrap" 
                     Text="" 
                     VerticalAlignment="Top" 
                     Width="450" 
                     Background="#FFB4B4B4"/>

        <Label Content="Standaard Valuta"
                Margin="20,120,0,0"
                HorizontalAlignment="Left"      
                VerticalAlignment="Top"     
                Width="130"/>
        <ComboBox x:Name="cboxCountryCurrency" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top"
                    Margin="170,123,0,0" 
                    Height="Auto"  
                    Width="70"/>

        <ToolBarTray Margin="10, 156,10,617">
            <ToolBar x:Name="generalToolbar" 
                    HorizontalAlignment="Left" 
                    Height="27"  
                 VerticalAlignment="Top" 
                     Width="450">
                <Button ToolTip="Land toevoegen aan de tabel">
                    <Image Source=".\Resources\app.png"></Image>
                </Button>
                <Button Command="New"       Content="Nieuw"         ToolTip="Land toevoegen aan de tabel"/>
                <Button Command="Save"      Content="Opslaan"       ToolTip="Land bijwerken"/>
                <Button Command="Delete"    Content="Verwijderen"   ToolTip="Land verwijderen uit de tabel"/>
            </ToolBar>
        </ToolBarTray>

        <DataGrid Margin="10,206,10,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Visibility="Hidden"></DataGridTextColumn>
                <DataGridTextColumn Header="Land code"></DataGridTextColumn>
                <DataGridTextColumn Header="Valuta ID" Visibility="Hidden"></DataGridTextColumn>
                <DataGridTextColumn Header="Valuta"></DataGridTextColumn>
                <DataGridTextColumn Header="Land"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
